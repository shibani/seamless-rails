{	
	"name": "<%=sanitize(restaurant.name) %>", 
	<%	mitsize = restaurant.menu_item_types.size
		restaurant.menu_item_types.each_with_index do |mit, i| %>
		"<%= mit.name %>" : 
				[
			<%	misize = mit.menu_items.size
				mit.menu_items.each_with_index do |mi, j| %>
				
					{
					"name" 			: "<%= mi.name %>",
					"price" 		: "<%= mi.price %>",
					"description" 		: "<%= mi.description %>"
					}<%= j <= misize-2 ? ", " : "" %>
			<% end %>	]<%= i <= mitsize-2 ? ", " : "" %>
	<% end %>
}