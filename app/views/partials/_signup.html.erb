<section id="main_content" class="landing">

	<div class="login_container">

		<h2>Sign up</h2>
		
		<%= form_for(@user) do |f| %>

      		<div class="field">
      			<%= f.email_field :email, id: "email", placeholder: "enter email", autocomplete: "off" %>
			</div>

      		<div class="field">
      			<%= f.text_field :name, id: "username", placeholder: "enter username", autocomplete: "off" %>
			</div>

			<div class="field">
				<%= f.password_field :password, id: "password", placeholder: "enter password", autocomplete: "off" %>
			</div>

			<div class="actions">
				<%= f.submit "Create my account" %>
			</div>

			<p><%= link_to "Click here", root_path %> to return to the sign in page</p>

		<%end%>

</section>

